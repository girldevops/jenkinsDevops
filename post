pipeline {
    agent any
    stages {
        stage('stage 1') {
            steps {
                echo 'Hello from stage 1'
            }
        }
        stage('stage 2') {
            steps {
                echo 'Hello from stage 2'
            }
        }
        stage('stage 3') {
            steps {
                echo 'Hello from stage 3 '
            }
        }
    }
    post { 
        success { 
            echo 'I will  say Hello again! if the build successed'
        }
    }
}
